use_frameworks!

platform :ios, '12.0'


def podsiOS
  pod 'WorkersLibrary', :path => '../'
  pod 'ModelsLibrary' , :path => "~/Desktop/TesteiOSv2/Projects/Pods/ModelsLibrary"
end

def podsiOSTest
  pod 'WorkersLibrary', :path => '../'
  pod 'ModelsLibrary' , :path => "~/Desktop/TesteiOSv2/Projects/Pods/ModelsLibrary"
end

target 'WorkersLibrary_Example' do
  podsiOS
end

target 'WorkersLibrary_Tests' do
  inherit! :search_paths
  podsiOSTest
 end


post_install do |installer|
   installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
         config.build_settings['SWIFT_VERSION'] = '5.0'
      end
   end
end
