use_frameworks!

platform :ios, '12.0'


def podsiOS
  Shared
  pod 'RxSwift', '6.1.0'
  pod 'RxCocoa', '6.1.0'
  # pod 'RxRelay, '6.1.0'
end

def podsiOSTest
  pod 'LoginLibrary', :path => '../'
end

target 'LoginLibrary_Example' do
  podsiOS
end

target 'LoginLibrary_Tests' do
  inherit! :search_paths
  podsiOSTest
 end


post_install do |installer|
   installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
         config.build_settings['SWIFT_VERSION'] = '5.0'
      end
   end
end
