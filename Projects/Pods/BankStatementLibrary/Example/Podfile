use_frameworks!

platform :ios, '12.0'


def podsiOS
  pod 'BankStatementLibrary', :path => '../'
  pod 'ModelsLibrary' , :path => "~/Desktop/TesteiOSv2/Projects/Pods/ModelsLibrary"
  pod 'WorkersLibrary' , :path => "~/Desktop/TesteiOSv2/Projects/Pods/WorkersLibrary"
  pod 'ServicesLibrary' , :path => "~/Desktop/TesteiOSv2/Projects/Pods/ServicesLibrary"
  pod 'RxSwift', '6.1.0'
  pod 'RxCocoa', '6.1.0'
  # pod 'RxRelay, '6.1.0'
end

def podsiOSTest
  pod 'BankStatementLibrary', :path => '../'
end

target 'BankStatementLibrary_Example' do
  podsiOS
end

target 'BankStatementLibrary_Tests' do
  inherit! :search_paths
  podsiOSTest
 end


post_install do |installer|
   installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
         config.build_settings['SWIFT_VERSION'] = '5.0'
      end
   end
end
